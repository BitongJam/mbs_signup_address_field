    <template id="auth_sighup_inherit_extend_sign" inherit_id="signup_address_fields_fl1.auth_sighup_inherit">
        <!-- <xpath expr="." position="inside"> -->
            <!-- <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places"></script> -->

            <!-- <script type="text/javascript" src="/mbs_signup_address_fields/static/src/js/auth_signup.js"/> -->
        <!-- </xpath> -->
        <xpath expr="//div[hasclass('field-mobile')]" position="after">
            <t t-set="google_api_key" t-value="request.env['ir.config_parameter'].sudo().get_param('mbs_signup_address_fields.google_maps_api_key')"/>

            <div id="google_api_key_holder" t-att-data-google-api-key="google_api_key"/>
            <div class="mb-3 form-group field-vat">
                <label for="vat">Tax Number</label>
                <input type="text" name="vat" t-att-value="vat" id="vat" class="form-control form-control-sm"/>
            </div>

            <div class="mb-3 form-group field-phone">
                <label for="phone">Phone*</label>
                <input type="text" name="phone" t-att-value="taxid" id="phone" class="form-control form-control-sm" required="required"/>
            </div>

            <div class="mb-3 form-group field-street">
                <label for="street">Street*</label>
                <input type="text" name="street" t-att-value="taxid" id="street" class="form-control form-control-sm" required="required"/>
            </div>
            <div class="mb-3 form-group field-street2">
                <label for="street2">Street2*</label>
                <input type="text" name="street2" t-att-value="taxid" id="street2" class="form-control form-control-sm" required="required"/>
            </div>
            <div class="mb-3 form-group field-city">
                <label for="city">City*</label>
                <input type="text" name="city" t-att-value="taxid" id="city" class="form-control form-control-sm" required="required"/>
            </div>
            <div class="mb-3 form-group field-state_id">
                <label for="state_id">State*</label>
                <!-- <input type="text" name="state" t-att-value="taxid" id="state" class="form-control form-control-sm" required="required"/> -->
                <select name="state_id" id="state_id" class="form-control form-control-sm" required="required">
                    <option value="">Select a State</option>
                    <t t-foreach="request.env['res.country.state'].sudo().search([])" t-as="state">
                        <option t-att-value="state.id" t-esc="state.name"/>
                    </t>
                </select>
            </div>
            <div class="mb-3 form-group field-country_id">
                <label for="country_id">Country*</label>
                <!-- <input type="text" name="country" t-att-value="taxid" id="country" class="form-control form-control-sm" required="required"/> -->

                <select name="country_id" id="country_id" class="form-control form-control-sm" required="required">
                    <option value="">Select a country</option>
                    <t t-foreach="request.env['res.country'].sudo().search([])" t-as="country">
                        <option t-att-value="country.id" t-att-data-code="country.code" t-esc="country.name"/>
                    </t>
                </select>
            </div>

            <div class="mb-3 form-group field-zip">
                <label for="zip">Zip*</label>
                <input type="text" name="zip" t-att-value="taxid" id="zip" class="form-control form-control-sm" required="required"/>
            </div>
        </xpath>
    </template>
</odoo>